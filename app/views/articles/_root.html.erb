    text-align: center;
    font-weight: bold;
    font-size: 18px;
    width: 13%;
    margin: 0.6%;
  }


  .genre{
    position: relative;
  }

  .genre a{
    position: absolute;
    top: 24px;
    bottom:0;
    left: 0;
    right: 0;
    margin: auto;
  }

  .genre_1{
    color: #d43a52;
  }

  .genre_2{
    color: #817cc0;
  }

  .genre_3{
    color: #ff6c30;
  }

  .genre_4{
    color: #429ade;
  }

  .genre_5{
    color: #c6d443;
  }

  .genre_6{
    color: #30c0a9;
  }


  /*地域で分ける*/


  .districts{
    position: absolute;
    top: 40px;
    left: 0;
    right: 0;

  }

  .district_wrapper{
    display: inline-block;
    text-align: center;
    width: 15%;
    margin: 1%;
  }


  .district{
    position: relative;
  }

  .district a{
    position: absolute;
    top: 5px;
    bottom:0;
    left: 0;
    right: 0;
    margin: auto;
    font-weight: bold;
    font-size: 15px;
  }

  .district_list{
    position: absolute;
    top: 35px;
    left: 0;
    right: 0;
    font-weight: normal;
    font-size: 11px;
    padding: 0;
  }

  .district_list li{
    line-height: 15px;
    text-align: center;
    padding: 0;
  }


  .whatis{
    text-align: center;
    margin: 200px 0 0 0;
  }

  .whatis_title{
    width: 23%;
    margin-bottom: 70px;
  }

  .whatis p{
    font-size: 1rem;
    line-height: 1.6rem;
    font-weight: bold;
  }


  .howto{
    width: 80%;
    margin: 0 auto;
    padding: 100px 0;
 
  }

  .howto_text{
    display: inline-block;
    margin-left: 30px; 
  }

  .howto h2{
    font-size: 1.5rem;
    margin-bottom: 30px;
    font-weight: bold;
  }

  .howto p{
    font-size: 1rem;
    line-height: 1.2rem;
  }

  .howto_pic{
    display: inline-block; 
    width: 32%;
  }




  .line_spacing{
    margin-bottom: 40px;
  }

  .bottom_space{
    width: 100%;
    height: 100px;
    background-color: #f2eddf;
  }



  footer{
    height: 30px;
    width: 100%;
    float: left;
    background-color: white;
    padding: 0 15px;
  }


  .copyright{
    font-size: 10px;
    line-height: 30px;
    text-align: middle;

  }

