  .genres{
    position: absolute;
    top: 33%;
    left: 0;
    right: 0;

  }

  .genre-wrapper{
    display: inline-block;
    text-align: center;
    font-weight: bold;
    font-size: 1.2rem;
    width: 13%;
    margin: 0.9%;
  }


  .genre{
    position: relative;
  }

  .genre a{
    position: absolute;
    top: 30%;
    bottom:0;
    left: 0;
    right: 0;
    margin: auto;
  }


  .genre-1{
    color: #d43a52;
  }

  .genre-2{
    color: #817cc0;
  }

  .genre-3{
    color: #ff6c30;
  }

  .genre-4{
    color: #429ade;
  }

  .genre-5{
    color: #c6d443;
  }

  .genre-6{
    color: #30c0a9;
  }


  /*地域で分ける*/


  .districts{
    position: absolute;
    top: 24%;
    left: 0;
    right: 0;

  }

  .district-wrapper{
    display: inline-block;
    text-align: center;
    width: 15%;
    margin: 1%;
  }


  .district{
    position: relative;
  }

  .district a{
    position: absolute;
    top: 2%;
    bottom:0;
    left: 0;
    right: 0;
    margin: auto;
    font-weight: bold;
    font-size: 1rem;
  }


  .district-list{
    position: absolute;
    top: 24%;
    left: 0;
    right: 0;
    font-weight: normal;
    font-size: 0.8rem;
    padding: 0;
  }

  .district-list li{
    line-height: 1rem;
    text-align: center;
    padding: 0;
  }




  .whatis{
    text-align: center;
    margin: 200px 0 0 0;
  }

  .whatis-title{
    width: 23%;
    margin: 70px auto;
    text-align: center;
  }

  .whatis p{
    font-size: 1rem;
    line-height: 2.5rem;
    font-weight: bold;
  }




  .howto{
    margin: 0 5%;
    padding: 100px 5%;
    display: flex;
    align-items: center;
  }

  .howto-pic {
  width: 30%;
  }

  .howto-pic img {
    width: 300px;
    height: 300px;
  }

  .howto-text {
    width: 70%;
    padding-left: 50px;
  }

  .howto-text h2{
    font-size: 1.5rem;
    margin-bottom: 30px;
    font-weight: bold;
  }

  .howto-text p{
    font-size: 1rem;
    line-height: 2.5rem;
  }


  .line-spacing{
    margin-bottom: 40px;
  }

  .bottom-space{
    width: 100%;
    height: 100px;
    background-color: #f2eddf;
  }



  footer{
    height: 30px;
    width: 100%;
    float: left;
    background-color: white;
    padding: 0 15px;
  }


  .copyright{
    font-size: 10px;
    line-height: 30px;
    text-align: middle;

  }

